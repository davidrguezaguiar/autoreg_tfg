         </div> #}
    {% endif %}



    {% if app.session.flashbag.has( 'advertencia' ) %}

        {% for stringMesage in app.session.flashbag.get( 'advertencia') %}
            <div class="ui warning message" style="text-align: center;padding-right: 2%;">
                <div class="flash header">
                    <i class="exclamation triangle icon"></i> {{ stringMesage|nl2br }}
                </div>
            </div>
        {% endfor %}
