                       {{ stringMesage }}

                   </div>

               {% endfor %}

           </div> #}
    {% endif %}


    {% if app.session.flashbag.has('informacion') %}

        {% for stringMesage in app.session.flashbag.get( 'informacion' ) %}
            <div class="ui positive message" style="text-align: center;padding-right: 2%; margin-top: 2%">
                <div class="flash header">
                    <i class="check icon"></i> {{ stringMesage|nl2br }}
                </div>
            </div>
        {% endfor %}
    {% endif %}

